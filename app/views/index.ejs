<%- include('nav') -%>
<%- include('header') -%>
<%- include('whatsapp-button') -%>
<main>
    <section class="banner container shadow bg-main">
        <div class="row">
            <div class="banner-item location col-4">
                <div class="icon"><img src="./res/imgs/icons/location.png" alt="icone de localização"></div>
                <div class="description">
                    <p>VOCÊ É NOSSO CONVIDADO</p>
                    <span>VISITE A NOSSA LOJA</span>
                </div>
            </div>
            <div class="banner-item launch col-4">
                <div class="icon"><img src="./res/imgs/icons/box.png" alt="icone de caixa"></div>
                <div class="description">
                    <p>PRODUTOS GEEK</p>
                    <span>SELECIONADOS</span>
                </div>
            </div>
            <div class="banner-item box col-4">
                <div class="icon"><img src="./res/imgs/icons/rocket.png" alt="icone de lançamento"></div>
                <div class="description">
                    <p>FIQUE ATENTO AOS</p>
                    <span>NOSSOS LANÇAMENTOS</span>
                </div>
            </div>
        </div>
    </section>

    <section class="catalog container">
        <h2>NOSSOS GEEKS</h2>

        <%- include('./catalog/cards') -%>

        <div id="ReadMore" class="readmore" data-bs-toggle="collapse" data-bs-target="#collapse" aria-expanded="false" aria-controls="collapse">
            Ver Mais
        </div>

    </section>
    
    <section class="send-news container">
        <div class="row w-100">
            <div class="col-md-6">
                <h3>Receba as novidades por e-mail</h3>
            </div>
            <div class="col-md-6">
                <form>
                    <div class="input-group">
                        <input type="email" name="email" class="form-control rounded-0" placeholder="example123@email.com" />
                        <button class="btn-cia">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

<%- include('footer') -%>
<%- include('end-page') -%>